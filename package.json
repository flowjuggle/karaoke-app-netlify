{
  "name": "karaoke-app",
  "version": "1.0.0",
  "description": "Lightweight web karaoke app with YouTube playlist, snippet looping, and LRC editor",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node ./scripts/test-api.js",
    "docker:build": "docker build -t karaoke-app .",
    "docker:run": "docker run -p 3000:3000 --env-file .env karaoke-app",
    "build:netlify": "node ./scripts/build-netlify.js",
    "package:netlify": "powershell -ExecutionPolicy Bypass -Command \"& './scripts/package-netlify.ps1'\""
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.4.0",
    "better-sqlite3": "^8.3.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
